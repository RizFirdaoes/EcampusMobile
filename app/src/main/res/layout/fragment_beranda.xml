<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru"
    tools:context=".BerandaFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="260px"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_marginTop="65px"
            android:fontFamily="@font/poppins_bold"
            android:text="Hai, Selamat Sore"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300px"
            android:layout_marginTop="100px"
            android:fontFamily="@font/poppins"
            android:text="312110437"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300px"
            android:fontFamily="@font/poppins"
            android:text="Rizky Firdaus"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300px"
            android:fontFamily="@font/poppins"
            android:text="Teknik Informatika"
            android:textColor="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rounded">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/rounded_button_white"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_elearning" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:layout_alignEnd="@+id/imageButton"
            android:layout_marginStart="-5dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:text="E-Learning"
            android:textColor="@color/biru" />

    </RelativeLayout>

</RelativeLayout>